<UserControl x:Class="ErrH.UploaderVVM.Views.NavigationTabs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ErrH.UploaderVVM.Views"
             xmlns:vm="clr-namespace:ErrH.UploaderVVM.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <TabControl Style="{DynamicResource NaviTabsLeft}">

        <TabItem Header="{Binding DisplayName}"
                 DataContext="{Binding Path=FoldersVM}">
            <local:AppsListCtrl x:Name="_appsList"  />
        </TabItem>

        <TabItem Header="Another tab..." />
        <TabItem Header="And another one..." />

    </TabControl>
</UserControl>

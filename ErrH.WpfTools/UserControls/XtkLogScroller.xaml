<UserControl x:Class="ErrH.WpfTools.UserControls.XtkLogScroller"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ErrH.WpfTools.UserControls"
             xmlns:xtk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             >
    <xtk:RichTextBox Text="{Binding PlainText}">
        
        <xtk:RichTextBox.TextFormatter>
            <xtk:PlainTextFormatter />
        </xtk:RichTextBox.TextFormatter>
    </xtk:RichTextBox>
    
</UserControl>
